/* prepare.wxss */
.prepare-container {
  justify-content: flex-start;
  padding-top: 30rpx;
}

.instruction-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 50rpx;
  border: 1rpx solid rgba(52, 152, 219, 0.1);
}

.instruction-text {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #34495E;
  line-height: 1.5;
  font-weight: 500;
}

.phone-position {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
  height: 360rpx;
}

/* 手机和头部示意图 */
.phone-illustration {
  position: relative;
  width: 300rpx;
  height: 360rpx;
}

.phone-outline {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 140rpx;
  height: 250rpx;
  border: 6rpx solid #3498DB;
  border-radius: 20rpx;
  background-color: rgba(52, 152, 219, 0.1);
  z-index: 10;
}

.phone-screen {
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 20rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.screen-word {
  font-size: 36rpx;
  font-weight: bold;
  color: #2C3E50;
}

.head-illustration {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 240rpx;
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.head-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #F1C40F;
  position: relative;
  z-index: 1;
}

.face-elements {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  z-index: 2;
}

.eyes {
  position: absolute;
  top: 60rpx;
  left: 0;
  width: 140rpx;
  height: 20rpx;
  display: flex;
  justify-content: space-between;
}

.eyes::before, .eyes::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #2C3E50;
}

.smile {
  position: absolute;
  bottom: 40rpx;
  left: 35rpx;
  width: 70rpx;
  height: 35rpx;
  border-bottom: 6rpx solid #2C3E50;
  border-radius: 0 0 50% 50%;
}

.countdown {
  margin: 30rpx 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #3498DB;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(52, 152, 219, 0.4);
}

.active {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.count-number {
  font-size: 120rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.count-circles {
  display: flex;
  margin-top: 10rpx;
  gap: 10rpx;
}

.count-circle {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.6);
}

.pulse-animation {
  animation: pulse 2s infinite;
}

.game-settings {
  margin-top: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  width: 85%;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(52, 152, 219, 0.1);
}

.setting-item {
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #2C3E50;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  color: #7F8C8D;
}

.setting-value {
  font-weight: 600;
  color: #2C3E50;
}

.status-on {
  color: #2ECC71;
}

.status-off {
  color: #E74C3C;
}

.ready-tips {
  margin-top: 40rpx;
  width: 85%;
  padding: 20rpx;
  background-color: rgba(241, 196, 15, 0.1);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.ready-tips text {
  font-size: 26rpx;
  color: #7F8C8D;
  line-height: 1.4;
}

.ready-tips text:first-child {
  font-weight: 600;
  color: #F1C40F;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

/* 返回图标 */
.back-icon {
  width: 30rpx;
  height: 30rpx;
  border-top: 4rpx solid white;
  border-left: 4rpx solid white;
  transform: rotate(-45deg);
} 