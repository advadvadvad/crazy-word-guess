/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.home-container {
  padding-top: 40rpx;
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 标题区域 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.logo {
  font-size: 80rpx;
  font-weight: bold;
  color: #3498DB;
  margin-bottom: 20rpx;
  text-shadow: 0 6rpx 10rpx rgba(52, 152, 219, 0.3);
  letter-spacing: 4rpx;
  position: relative;
}

.logo::after {
  content: '';
  position: absolute;
  width: 60%;
  height: 8rpx;
  background: linear-gradient(to right, rgba(52, 152, 219, 0), rgba(52, 152, 219, 0.8), rgba(52, 152, 219, 0));
  bottom: -10rpx;
  left: 20%;
  border-radius: 4rpx;
}

.logo-tagline {
  font-size: 28rpx;
  color: #7F8C8D;
  font-weight: 500;
  margin-top: 16rpx;
}

/* 设置区域 */
.settings-container {
  width: 90%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 50rpx;
}

.setting-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  border: 1rpx solid rgba(52, 152, 219, 0.1);
}

.setting-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  position: relative;
  padding-left: 20rpx;
}

.setting-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 30rpx;
  background-color: #3498DB;
  border-radius: 4rpx;
}

.category-picker {
  width: 100%;
  padding: 20rpx 0;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-label {
  font-size: 28rpx;
  color: #7F8C8D;
}

.picker-value {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #2C3E50;
  font-weight: 600;
}

.picker-arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #3498DB;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #7F8C8D;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
  max-width: 400rpx;
}

.time-option {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(52, 152, 219, 0.1);
  color: #3498DB;
  font-size: 24rpx;
  transition: all 0.3s;
}

.time-selected {
  background-color: #3498DB;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(52, 152, 219, 0.4);
}

/* 按钮区域 */
.action-buttons {
  margin-top: 20rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 底部装饰 */
.decoration-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20rpx;
  display: flex;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 0;
}

.decoration-item {
  width: 30rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #3498DB;
  opacity: 0.7;
}
